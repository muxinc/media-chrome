{
  "name": "media-chrome",
  "version": "1.0.0-rc.4",
  "description": "Custom elements (web components) for making audio and video player controls that look great in your website or app.",
  "author": "@muxinc",
  "license": "MIT",
  "homepage": "https://github.com/muxinc/media-chrome#readme",
  "bugs": {
    "url": "https://github.com/muxinc/media-chrome/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./dist/cjs/*": "./dist/cjs/*",
    "./dist/*": "./dist/*",
    "./react": {
      "import": "./dist/react/index.mjs"
    }
  },
  "customElements": "dist/custom-elements.json",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "format": "prettier --write .",
    "clean": "rimraf dist",
    "lint": "eslint --ext .js,.mjs src/js",
    "premanifest": "cp -R src/js/ dist/",
    "manifest": "npx @custom-elements-manifest/analyzer analyze --config scripts/custom-elements-manifest.config.mjs",
    "build:types": "tsc",
    "build:esm": "esbuild src/js/*.js src/js/*/*.js src/js/*/*/*.js --target=es2019 --format=esm --outdir=dist --out-extension:.js=.mjs",
    "postbuild:esm": "shx sed -i 's/\\.js\";/\\.mjs\";/g' dist/*.mjs dist/*/*.mjs dist/*/*/*.mjs",
    "build:cjs": "esbuild src/js/*.js src/js/*/*.js src/js/*/*/*.js --target=es2019 --format=cjs --outdir=dist/cjs --out-extension:.js=.cjs",
    "postbuild:cjs": "shx sed -i \"s/\\.js\\\"\\)/\\.cjs\\\")/g\" dist/cjs/*.cjs dist/cjs/*/*.cjs dist/*/*/*.cjs",
    "build:iife": "esbuild src/js/index.js --bundle --target=es2019 --format=iife --outdir=dist/iife --minify --sourcemap --global-name=MediaChrome && yarn size",
    "build:react": "node ./scripts/react/build.mjs",
    "postbuild:react": "esbuild dist/react/*.mjs dist/react/common/*.js --target=es2019 --format=cjs --outdir=dist/react/cjs --out-extension:.js=.cjs",
    "build": "run-s build:types build:esm build:cjs build:iife build:react",
    "watch": "run-p watch:types watch:esbuild",
    "watch:types": "yarn build:types -w",
    "watch:esbuild": "node ./scripts/esbuild.mjs",
    "dev": "yarn watch",
    "start": "yarn dev",
    "test": "web-test-runner --coverage --config test/web-test-runner.config.mjs",
    "publish-release": "./scripts/publish.sh",
    "size": "echo \"\\n  dist/\\033[1miife/index.js\\033[0m     \\033[0;32m$(($(cat dist/iife/index.js | gzip -c9 | wc -c)))B gzip\\033[0m\\n\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muxinc/media-chrome.git"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.8.0",
    "@open-wc/testing": "^3.1.6",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-playwright": "^0.9.0",
    "cem-plugin-vs-code-custom-data-generator": "^1.4.1",
    "esbuild": "^0.15.12",
    "eslint": "^8.25.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "sinon": "^14.0.1",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true
  },
  "eslintConfig": {
    "globals": {
      "globalThis": "writable"
    },
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "keywords": [
    "webcomponent",
    "html5",
    "video",
    "audio",
    "media",
    "player",
    "controls"
  ]
}
